<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pendaftaran Workshop Game Dev</title>
  @vite(['resources/css/app.css', 'resources/js/app.js'])
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      background: linear-gradient(135deg, #1a1c2c, #5d275d);
      color: #333;
      min-height: 100vh;
    }
    
    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 2rem;
    }
    
    .card {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 1rem;
      overflow: hidden;
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
      backdrop-filter: blur(10px);
    }
    
    .card-header {
      background: linear-gradient(to right, #ff7e5f, #feb47b);
      padding: 1.5rem;
      color: white;
      text-align: center;
    }
    
    h1 {
      margin: 0;
      font-size: 2rem;
    }
    
    .card-body {
      padding: 2rem;
    }
    
    .form-group {
      margin-bottom: 1.5rem;
    }
    
    label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: #555;
    }
    
    input, select {
      width: 100%;
      padding: 0.8rem;
      border: 1px solid #ddd;
      border-radius: 0.5rem;
      font-size: 1rem;
      transition: all 0.3s ease;
    }
    
    input:focus, select:focus {
      outline: none;
      border-color: #ff7e5f;
      box-shadow: 0 0 0 3px rgba(255, 126, 95, 0.2);
    }
    
    .btn {
      display: block;
      width: 100%;
      padding: 1rem;
      background: linear-gradient(to right, #ff7e5f, #feb47b);
      color: white;
      border: none;
      border-radius: 0.5rem;
      font-size: 1.1rem;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 5px 15px rgba(255, 126, 95, 0.4);
    }
    
    .alert {
      padding: 1rem;
      border-radius: 0.5rem;
      margin-bottom: 1.5rem;
      text-align: center;
    }
    
    .alert-danger {
      background-color: #ffeeee;
      color: #e53e3e;
      border: 1px solid #fed7d7;
    }
    
    .back-link {
      display: block;
      text-align: center;
      margin-top: 1.5rem;
      color: white;
      text-decoration: none;
    }
    
    .back-link:hover {
      text-decoration: underline;
    }
    
    .workshop-options {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      margin-top: 0.5rem;
    }
    
    .workshop-option {
      flex: 1;
      min-width: 200px;
      padding: 1rem;
      border: 1px solid #ddd;
      border-radius: 0.5rem;
      text-align: center;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .workshop-option:hover {
      border-color: #ff7e5f;
      background-color: #fff4f0;
    }
    
    .workshop-option.selected {
      border-color: #ff7e5f;
      background-color: #fff4f0;
      box-shadow: 0 0 0 2px rgba(255, 126, 95, 0.4);
    }
    
    .workshop-icon {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h1>Form Pendaftaran Workshop Game Development</h1>
      </div>
      <div class="card-body">
        @if(session.has('error'))
        <div class="alert alert-danger">
          {{ session.get('error') }}
        </div>
        @endif
        
        <form action="/participants" method="POST">
          {{ csrfField() }}
          
          <div class="form-group">
            <label for="name">Nama Lengkap</label>
            <input type="text" name="name" id="name" placeholder="Masukkan nama lengkap anda" required />
          </div>
          
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="contoh@email.com" required />
          </div>
          
          <div class="form-group">
            <label for="phone">Nomor HP</label>
            <input type="text" name="phone" id="phone" placeholder="08xxxxxxxxxx" required />
          </div>
          
          <div class="form-group">
            <label>Pilih Workshop</label>
            <input type="hidden" name="workshop" id="workshop-selected" required />
            
            <div class="workshop-options">
              <div class="workshop-option" data-value="Unity 3D">
                <div class="workshop-icon">üéÆ</div>
                <div>Unity 3D</div>
              </div>
              
              <div class="workshop-option" data-value="Unreal Engine">
                <div class="workshop-icon">üöÄ</div>
                <div>Unreal Engine</div>
              </div>
              
              <div class="workshop-option" data-value="Godot Engine">
                <div class="workshop-icon">üëæ</div>
                <div>Godot Engine</div>
              </div>
              
              <div class="workshop-option" data-value="Game Art & Design">
                <div class="workshop-icon">üé®</div>
                <div>Game Art & Design</div>
              </div>
            </div>
          </div>
          
          <button type="submit" class="btn">Daftar Sekarang</button>
        </form>
      </div>
    </div>
    
    <a href="/" class="back-link">‚Üê Kembali ke Halaman Utama</a>
  </div>
  
  <script>
    // Script for workshop selection
    document.addEventListener('DOMContentLoaded', function() {
      const options = document.querySelectorAll('.workshop-option');
      const hiddenInput = document.getElementById('workshop-selected');
      
      options.forEach(option => {
        option.addEventListener('click', function() {
          // Remove selection from all options
          options.forEach(opt => opt.classList.remove('selected'));
          
          // Add selection to clicked option
          this.classList.add('selected');
          
          // Update hidden input with selected value
          hiddenInput.value = this.dataset.value;
        });
      });
    });
  </script>
</body>
</html>